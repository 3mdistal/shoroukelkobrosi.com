{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": [
    "BLOB_READ_WRITE_TOKEN",
    "MONGODB_URI",
    "NEXT_PUBLIC_VERCEL_ENV",
    "NEXT_PUBLIC_VERCEL_PROJECT_PRODUCTION_URL",
    "NEXT_PUBLIC_VERCEL_URL",
    "PAYLOAD_SECRET",
    "POSTGRES_URL",
    "RESEND_API_KEY",
    "VERCEL_ENV"
  ],
  "tasks": {
    "build": {
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "lint": {
      "outputs": ["node_modules/.cache/.eslintcache"]
    },
    "migrate:create": {
      "outputs": ["migrations/**"],
      "interactive": true,
      "cache": false
    },
    "env-pull": {
      "cache": false,
      "interactive": true,
      "outputs": [".env.local"]
    },
    "start": {
      "persistent": true,
      "cache": false,
      "dependsOn": ["build"]
    },
    "test": {
      "cache": false
    },
    "vercel": {
      "cache": false
    }
  }
}
