---
import "@/styles/globals.css";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="The creative works of Alice Alexandra Moore."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" type="application/xml" href="/sitemap.xml" />
    <title>{title}</title>
    <style>
      @view-transition {
        navigation: auto;
      }
    </style>
  </head>
  <body>
    <h1>{title}</h1>
    <slot />
  </body>
  <style is:global></style>
</html>
